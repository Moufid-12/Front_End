<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.AccountFragment"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="3dp"
        app:titleTextColor="@color/bleue"
        app:title="Profile"
        app:subtitleTextColor="@color/black"
        tools:ignore="MissingConstraints" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           android:layout_marginTop="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:src="@drawable/banner5"
                android:textAlignment="center"
               />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="sans-serif"
                        android:text="Chola Patrick"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="28dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="chola@gmail.com"
                        android:textAlignment="center"
                        android:textColor="#616161"
                        android:textSize="19dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="voir plus"
                        android:textAlignment="center"
                        android:textSize="15dp" />

                    <Button
                        android:layout_width="220dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="75dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="7dp"
                        android:background="@drawable/round_button_valider"
                        android:text="Editer Profile"
                        app:backgroundTint="@color/bleue" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content de vente"
                android:textSize="23dp"
                android:background="#E6E6E6"
                android:textAlignment="center"

                tools:ignore="MissingConstraints" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E6E6E6"
                android:paddingTop="11dp">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:background="@color/white">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:background="@color/white"
                      android:layout_marginBottom="11dp">
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/favorite"
                          android:layout_marginTop="5dp"
                          android:layout_marginLeft="10dp"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Favories"
                          android:textSize="20dp"
                          android:layout_marginLeft="15dp"
                          android:textColor="@color/black"/>
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/profile_retour"
                          android:layout_marginLeft="178dp"/>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:background="@color/white"
                      android:layout_marginBottom="11dp">
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/mes_produits_profile"
                          android:layout_marginTop="5dp"
                          android:layout_marginLeft="10dp"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Mes produits"
                          android:textSize="20dp"
                          android:layout_marginLeft="15dp"
                          android:textColor="@color/black"/>
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/profile_retour"
                          android:layout_marginLeft="135dp"/>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:background="@color/white"
                      android:layout_marginBottom="11dp">
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/add_produits_profile"
                          android:layout_marginTop="5dp"
                          android:layout_marginLeft="10dp"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Ajouter produits"
                          android:textSize="20dp"
                          android:layout_marginLeft="15dp"
                          android:textColor="@color/black"/>
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/profile_retour"
                          android:layout_marginLeft="105dp"/>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:background="@color/white"
                      android:layout_marginBottom="11dp">
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/history_produits_profile"
                          android:layout_marginTop="5dp"
                          android:layout_marginLeft="10dp"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Historique produit"
                          android:textSize="20dp"
                          android:layout_marginLeft="15dp"
                          android:textColor="@color/black"/>
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/profile_retour"
                          android:layout_marginLeft="85dp"/>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:background="@color/white"
                      android:layout_marginBottom="11dp">
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/portfeuile_produits_profile"
                          android:layout_marginTop="5dp"
                          android:layout_marginLeft="10dp"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Mon Portefeuille"
                          android:textSize="20dp"
                          android:layout_marginLeft="15dp"
                          android:textColor="@color/black"/>
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/profile_retour"
                          android:layout_marginLeft="98dp"/>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:background="@color/white"
                      android:layout_marginBottom="11dp"
                    >
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/logout_produits_profile"
                          android:layout_marginTop="5dp"
                          android:layout_marginLeft="10dp"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Me Deconnecter"
                          android:textSize="20dp"
                          android:layout_marginLeft="15dp"
                          android:textColor="@color/black"/>

                  </LinearLayout>

              </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>